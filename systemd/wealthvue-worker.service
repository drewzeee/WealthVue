[Unit]
Description=WealthVue Background Worker
After=network.target postgresql.service redis.service wealthvue.service

[Service]
Type=simple
User=<USER>
WorkingDirectory=<PROJECT_ROOT>
# Ensure environment variables are loaded
EnvironmentFile=<PROJECT_ROOT>/.env
ExecStart=/usr/bin/npm run worker
Restart=always
# StandardOutput=append:/var/log/wealthvue/worker.log
# StandardError=append:/var/log/wealthvue/worker.error.log

[Install]
WantedBy=multi-user.target
